<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="orm.mybatis.mapper.empMapper">
   <select id="empList" parameterType="map" resultType="java.util.Map">
    select empno, ename, job, mgr, hiredate, sal, comm, deptno
      from emp
      <if test="empno > 0">
         where empno = #{empno}
      </if>
      </select>
      <!-- 
        <select id="empList2" parameterType="map" resultType="java.util.EmpVO">
       select empno, ename, job, mgr, hiredate, sal, comm, deptno
      from emp
      </select>
       -->
      <delete id="empDelete" parameterType="map">
         delete from emp
         where empno = #{empno}<!-- Map<String,Object> map.put("empno",7566); -->
      </delete>
</mapper> 